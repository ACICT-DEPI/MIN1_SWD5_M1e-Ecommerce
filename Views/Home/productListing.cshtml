  
 
@model List<Product>
<section class="product-section mt-5 py-4 py-md-5 py-lg-5 mb-5 overflow-x-hidden">
        <div class="row gy-3 gy-md-4 gy-lg-5 d-flex justify-content-start ">


        @foreach (var i in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card product-card">
                    <img src="@i.Imagepath" alt="Product Image" class="card-img-top">
                    <div class="product-icons">
                        <a href="#" class="btn btn-light"><i class="bi bi-star"></i></a>
                        <a href="#" class="btn btn-light"><i class="bi bi-arrow-left-right"></i></a>
                        <a href="#" class="btn btn-light"><i class="bi bi-eye"></i></a>
                    </div>
                    <button class="add-to-cart-btn btn btn-light">Add to Cart</button>
                    <div class="card-body text-center">
                        <h5 class="card-title">@i.PName</h5>
                        <p class="card-text">@i.Description</p>
                        <div>
                            <span class="new-price">$@i.Price</span>
                            <span class="old-price">$@(i.Price + 20)</span>
                        </div>
                    </div>
                </div>
            </div>
        }


        <!-- ============================== Repeat other product cards ================================= -->
        </div>
    
        <!-- ==================================== Pagination Section  ====================================== -->
        <nav aria-label="Page navigation example" class="d-flex justify-content-end mt-4 py-3 py-md-5 py-lg-5">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&lsaquo;</span> 
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&rsaquo;</span> 
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container">
            <div class="row text-center">
                <div class="col-12 col-md-3">
                    <div class="feature-box">
                        <i class="bi bi-box-seam fs-1"></i>
                        <h5 class="mt-3">Free Shipping</h5>
                        <p class="text-muted">Free shipping for orders above $150</p>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="feature-box">
                        <i class="bi bi-currency-dollar fs-1"></i>
                        <h5 class="mt-3">Money Guarantee</h5>
                        <p class="text-muted">Within 30 days for an exchange</p>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="feature-box">
                        <i class="bi bi-headset fs-1"></i>
                        <h5 class="mt-3">Online Support</h5>
                        <p class="text-muted">24 hours a day, 7 days a week</p>
                    </div>
                </div>
                <div class="col-12 col-md-3">
                    <div class="feature-box">
                        <i class="bi bi-credit-card fs-1"></i>
                        <h5 class="mt-3">Flexible Payment</h5>
                        <p class="text-muted">Pay with multiple credit cards</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
